<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewCountryGameActivity">

    <Button
        android:id="@+id/btnGuessCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:text="Guess the Country"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGuessHints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:text="Guess-Hints"
        app:layout_constraintStart_toStartOf="@+id/btnGuessFlag"
        app:layout_constraintTop_toBottomOf="@+id/btnGuessCountry" />

    <Button
        android:id="@+id/btnGuessFlag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="18dp"
        android:text="Guess the Flag"
        app:layout_constraintStart_toStartOf="@+id/btnAdvancedLevel"
        app:layout_constraintTop_toBottomOf="@+id/btnGuessHints" />

    <Button
        android:id="@+id/btnAdvancedLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Advanced Level"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGuessFlag" />
</androidx.constraintlayout.widget.ConstraintLayout>