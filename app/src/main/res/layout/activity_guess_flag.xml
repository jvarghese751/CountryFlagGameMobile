<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuessFlagActivity">

    <ImageView
        android:id="@+id/flagImageView3"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toTopOf="@+id/countryNameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flagImageView2"
        app:srcCompat="@drawable/belgium" />

    <ImageView
        android:id="@+id/flagImageView2"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/flagImageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flagImageView1"
        app:srcCompat="@drawable/australia" />

    <ImageView
        android:id="@+id/flagImageView1"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/flagImageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/algeria" />

    <TextView
        android:id="@+id/countryNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:text="Country Name"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/resultTextViewGF"
        app:layout_constraintEnd_toStartOf="@+id/resultTextViewGF"
        app:layout_constraintStart_toStartOf="@+id/resultTextViewGF"
        app:layout_constraintTop_toBottomOf="@+id/flagImageView3" />

    <TextView
        android:id="@+id/resultTextViewGF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="57dp"
        android:text=""
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/nextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countryNameTextView" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="146dp"
        android:layout_height="0dp"
        android:layout_marginBottom="146dp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultTextViewGF" />
</androidx.constraintlayout.widget.ConstraintLayout>